{
  "componentName": "GlPage",
  "props": {
    "breadcrumb":["客户信息管理", "客户列表"],
    "pageTitle":"客户列表"
  },
  "children": [
    {
      "componentName": "GlEntityTablePlus",
      "props": {
        "entityName": "crm_customer",
        "query": {
          "items": [
            {
              "id": "name",
              "name": "名称",
              "cop": "contains",
              "isAdvanceQuery": false,
              "colspan": 6,
              "componentName": "AInput",
              "props": {}
            },
            {
              "id": "所属业务员",
              "name": "编码",
              "isAdvanceQuery": false,
              "colspan": 6,
              "componentName": "AInput",
              "props": {}
            }
          ]
        },
        "toolbar": {
          "leftColSpan": 12,
          "centerColSpan": 0,
          "rightColSpan": 12,
          "leftItems": [
            {
              "componentName": "AButton",
              "props": {
                "name": "新增"
              }
            }
          ],
          "rightItems": [
          ]
        },
        "columns": [
          {
            "title": "ID",
            "dataIndex": "id",
            "slotName": "index"
          },
          {
            "title": "名称",
            "dataIndex": "name",
            "fixed": "right",
            "sortable": {
              "sortDirections": [
                "ascend",
                "descend"
              ]
            }
          },
          {
            "title": "类型",
            "dataIndex": "type",
            "xRenderScript": "ctx.record.type === '1' ? '直客' : '代理'"
          },
          {
            "title": "启用",
            "dataIndex": "delStatus",
            "slotName": "delStatus",
            "xRenderScript": "ctx.record.delStatus === 1 ? '已启用' : '未启用'"
          },
          {
            "title": "描述",
            "dataIndex": "description"
          },
          {
            "title": "创建时间",
            "dataIndex": "createAt"
          },
          {
            "title": "操作",
            "dataIndex": "optional",
            "slotName": "optional"
          }
        ],
        "columnActions": [
          {
            "title": "查看",
            "fn": "read"
          },
          {
            "title": "删除",
            "fn": "delete",
            "ctx": "xxx",
            "status": "danger"
          }
        ]
      }
    }
  ]
}